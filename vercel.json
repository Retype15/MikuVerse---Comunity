{
  "version": 2,
  "builds": [
    {
      "src": "src/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/server.js"
    },
    {
      "src": "/css/(.*)",
      "dest": "/public/css/$1"
    },
    {
      "src": "/images/(.*)",
      "dest": "/public/images/$1"
    },
    {
      "src": "/(.*).js",
      "dest": "/public/$1.js"
    },
    {
      "src": "/(.*).html",
      "dest": "/public/$1.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ]
}